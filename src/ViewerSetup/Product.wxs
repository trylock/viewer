<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="Viewer" Language="1033" Version="1.0.2.0" Manufacturer="trylock" UpgradeCode="f38d1b47-4e19-48b3-a0df-81261277a26b">
    <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of Viewer is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" Title="Viewer" Level="1">
      <ComponentGroupRef Id="UniqueComponentGroupName" />
      <ComponentRef Id="ApplicationDesktopShortcut" />
    </Feature>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="Viewer" />
      </Directory>

      <!-- Create shortcut on desktop -->
      <Directory Id="DesktopFolder" Name="Desktop">
        <Component Id="ApplicationDesktopShortcut" Guid="d3bbabc9-092c-40c1-be31-7c0651bf68fa">
          <!-- fil9F07C0231A0F6AC09C41EF40191D0D6D (generated by heat) is Viewer.exe -->
          <Shortcut Id="ApplicationDesktopShortcut"
                    Name="Viewer"
                    Description="Multifilter Photo Viewer"
                    Target="[#fil9F07C0231A0F6AC09C41EF40191D0D6D]"
                    WorkingDirectory="APPLICATIONROOTDIRECTORY" />
          <RegistryValue Root="HKCU"
                         Key="Software\Trylock\Viewer"
                         Name="installed"
                         Type="integer"
                         Value="1"
                         KeyPath="yes" />
        </Component>
      </Directory>
    </Directory>
  </Fragment>
</Wix>
